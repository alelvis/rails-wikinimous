<div class='container'>
  <h2><%= @article.title %></h2>
  <%= link_to "Edit", edit_article_path(@article.id), class: 'btn btn-primary' %>
  <%= link_to "Delete", article_path(@article.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-danger' %>
  <%= link_to "Back", articles_path, class: 'btn btn-secondary' %>

  <p><%= @article.content %></p>
</div>
